<div metal:use-macro="load: ../shared/_layout.pt">
    <div metal:fill-slot="content" tal:omit-tag="True">
        <div class="page-core">

            <div class="chore" tal:repeat="c chores">
                <h1>${c.chore_name}</h1>
                <div class="title"><a href="/chores/${c.chore_id}"><strong>Chore id:</strong> ${c.chore_id}</a></div>
                <div class="desc"><strong>Name:</strong> ${c.chore_name}</div>
                <div class="desc"><strong>Category:</strong> ${c.category}</div>
                <div class="desc"><strong>Type:</strong> ${c.type}</div>
                <div class="desc"><strong>Alert Days:</strong> ${c.alert_days}</div>
                <!--?                todo; delete button-->
            </div>

        </div>
    </div>
</div>

