<div metal:use-macro="load: ../shared/_layout.pt">
    <div metal:fill-slot="content" tal:omit-tag="True">
        <div class="page-core">

            <div class="form-container">
                <form action="" method="POST" class="account-form">
                    <h1>Add a Chore</h1>

                    <input name="name" type="text" placeholder=" Chore Name" class="form-control" value="${ chore_name }"
                           required>
                    <br>
                    <hr>
                    <br>
                    <input name="category" type="text" placeholder=" Chore Category" class="form-control"
                           value="${ category }" required>
                    <br>
                    <hr>
                    <br>
                    <select name="type" class="form-select">
                        <option value="recurring">Recurring</option>
                        <option value="hard">Hard</option>
                    </select>
                    <br>
                    <hr>
                    <br>
                    <input name="alert_days" type="number" min="0" max="365" class="form-control"
                           placeholder=" Days until Alert"
                           value="${alert_days}"
                           style="display: block">

                    <br>
                    <hr>
                    <br>

                    <button type="submit" class="btn btn-danger">Submit</button>
                    <div style="clear: both;"></div>

                    <div class="error-msg" tal:condition="error">${ error }</div>
                </form>

            </div>
        </div>
    </div>
    <div metal:fill-slot="additional_css" tal:omit-tag="True">
        <link rel="stylesheet" href="/static/css/chore_forms.css">
    </div>
</div>
